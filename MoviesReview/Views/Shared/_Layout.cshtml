@using Reviews.Models
@{
    var user = (User)Session["User"];
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Reviews</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Site.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/hover.css" type="text/css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">

</head>
<body>
    <header class="navbar navbar-light bg-light fixed-top reviews-navbar custom-nav-bar">
        <a href="/">
            <img src="../../Content/Movie.png" class="logo hvr-bounce-in">
        </a>
        <nav class="navbar-nav-scroll">
            <ul class="navbar-nav bd-navbar-nav flex-row">
                <li class="nav-item custom-nav-link">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link custom-nav-link" })</li>
                <li class="nav-item custom-nav-link">@Html.ActionLink("Reviews", "Index", "Reviews", new { area = "" }, new { @class = "nav-link custom-nav-link" })</li>
                @if (user != null && user.IsAdmin)
            {
                    <li class="nav-item custom-nav-link">@Html.ActionLink("Categories", "Index", "Categories", new { area = "" }, new { @class = "nav-link custom-nav-link" })</li>
                }
                @if (user != null && user.IsAdmin)
            {
                    <li class="nav-item custom-nav-link">@Html.ActionLink("Users", "Index", "User", new { area = "" }, new { @class = "nav-link custom-nav-link" })</li>
                }
                <li class="nav-item custom-nav-link">@Html.ActionLink("User Statistics", "Stats", "User", new { area = "" }, new { @class = "nav-link custom-nav-link" })</li>
                <li class="nav-item custom-nav-link">@Html.ActionLink("Review Statistics", "Stats", "Reviews", new { area = "" }, new { @class = "nav-link custom-nav-link" })</li>
                <li class="nav-item custom-nav-link">@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link custom-nav-link" })</li>
            </ul>
        </nav>
        @Html.Partial("_LoginPartial")

    </header>
    @using (Html.BeginForm("Search", "Reviews", FormMethod.Get))
    {
        <div class="main-search">
            <div style="width: 50%;">
                <div class="input-group">
                    <input type="text" class="form-control" name="title" placeholder="Search review for...">
                    <span class="input-group-btn">
                        <button class="btn btn-outline-light btn-lg" type="button">Search!</button>
                    </span>
                </div>
            </div>
        </div>
    }
    <div class="container" style="margin-bottom: 45px;">
        @RenderBody()

    </div>
    <footer class="sticky-bottom" style="text-align: center;">
        <div id="temperatureDiv">
            <span>Temperature in Tel Aviv: </span>
            <p>getting info...</p>
        </div>
        <div>
            <p>© 2017 - stackReviews </p>
        </div>
    </footer>

    <script src="~/Scripts/weather.js"></script>
    <script src="https://query.yahooapis.com/v1/public/yql?q=select item, wind from weather.forecast where woeid in (select woeid from geo.places(1) where text='Tel Aviv, il') and u='c'&format=json&callback=weatherCallback"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>